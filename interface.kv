            halign: "center"
            
            
        BotaoPadrao:
            pos_hint: {"center_x": .5, "center_y": .5}
            text: "     Voltar     "
            on_release:
                app.root.current = "tela_principal"
                app.root.transition.direction = "right"

        MDLabel: